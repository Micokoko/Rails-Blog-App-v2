<div class="columns is-centered">
  <div class="column is-half">
    <%= form_with(model: user, url: users_path, local: true) do |f| %>
      <% if user.errors.any? %>
        <div class="alert alert-danger">
          <ul>
            <% user.errors.full_messages.each do |error| %>
              <li><%= error %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="field">
        <label class="label is-2" for="username">Username</label>
        <div class="control">
          <%= f.text_field :username, class: 'input is-info', placeholder: 'Enter Username', style: 'width: 300px;' %>
        </div>
      </div>

      <div class="field">
        <label class="label is-2" for="email">Email</label>
        <div class="control">
          <%= f.text_field :email, class: 'input is-info', placeholder: 'Enter Email address', style: 'width: 300px;' %>
        </div>
      </div>

      <div class="field">
        <div class="control">
          <%= f.submit 'Update User', class: 'button is-primary' %>
        </div>
      </div>
    <% end %>
  </div>
</div>
