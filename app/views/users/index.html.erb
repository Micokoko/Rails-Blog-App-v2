<div class="columns is-centered">
  <div class="column is-half">
    <% @users.each do |user| %>
      <div class="mb-4">
        <ul>
          <li class="title is-2">Username: <%= user.username %></li>
          <li class="title is-2">Email: <%= user.email %></li>
        </ul>
        <div class="buttons mt-2">
          <%= link_to 'Edit', edit_user_path(user), class: 'button is-info' %>
          <%= link_to 'Delete', user_path(user), method: :delete, data: { confirm: 'Are you sure?' }, class: 'button is-danger' %>
        </div>
      </div>
    <% end %>

    <%= link_to 'New User', new_user_path, class: 'button is-primary' %>
  </div>
</div>
